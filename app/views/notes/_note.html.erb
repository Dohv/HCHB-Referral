<section class="comment-list">
  <article class="row">
    <div class="col-md-10 col-sm-10">
      <div class="panel panel-default arrow left">
      <% if note.body %>
        <div class="panel-body">
          <header class="text-left">
            <div class="comment-user"><i class="fa fa-user"></i> <%= note.author %></div>
            <time class="comment-date" datetime="16-12-2014 01:05"><i class="fa fa-clock-o"></i><%= note.date %></time>
          </header>
          <div class="comment-post">
            <p>
              <%= note.body %>
            </p>
      </div>
      <% end %>
    </div>
  </article>
</section>

