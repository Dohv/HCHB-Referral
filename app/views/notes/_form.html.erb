<%= form_for([@referral, @referral.notes.build]) do |f| %>
  <div class="form-group">
    <div class="col-sm-6">
      <%= f.hidden_field :author, class: "form-control", :value => current_user.user_name, autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-6">
      <%= f.hidden_field :date, class: "form-control", :value => Time.now.strftime("%d/%m/%Y %H:%M") , autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class=" col-lg-1">
      <%= f.label :Add_a_note %>
    </div>
    <div class="col-sm-8">
      <%= f.text_area :body, class: "form-control", placeholder: "Add note here", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col">
      <%= f.submit class: "btn btn-primary btn-sm" %>
    </div>
  </div>
<% end %>